@page
@model TennisBooking.Pages.members.CreateMemberModel
@{
    ViewData["Title"] = "CreateMember";
}

<h1>New Member</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Member.FirstName" class="control-label">Fornavn</label>
                <input asp-for="@Model.Member.FirstName" class="form-control" required="" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Member.LastName" class="control-label">Efternavn</label>
                <input asp-for="@Model.Member.LastName" class="form-control" required=""/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Member.Address" class="control-label"></label>
                <input asp-for="@Model.Member.Address" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Member.Mail" class="control-label"></label>
                <input asp-for="@Model.Member.Mail" class="form-control" required="" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Member.Password" class="control-label"></label>
                <input type="password" asp-for="@Model.Member.Password" class="form-control" required="" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Member.PhoneNumber" class="control-label"></label>
                <input asp-for="@Model.Member.PhoneNumber" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="Index">Back to List</a>
</div>
