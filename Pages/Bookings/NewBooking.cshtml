            <label asp-for="@Model.Booking.Confirmation"class="control-label"></label>
            <input type="checkbox" asp-for="@Model.Booking.Confirmation" class="form-control"/>
        </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>